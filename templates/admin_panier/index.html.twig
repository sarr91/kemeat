{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1>Panier</h1>
<div>Total du panier {{ cart.total }} €</div>

<div>
    <a href="{{ path('admin_panier_vider') }}">Vider panier</a>
</div>
<table>
    <tr>
        <th>Nom</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
        <th>...</th>
    </tr>

    {% for element in cart.elements %}
        <tr>
            <td>{{ element.panier.plats}}</td>
            <td>{{ element.panier.price}}</td>
            <td>{{ element.panier.quantité}}</td>
            <td>
                <a href="{{ path('admin_panier_add', {'id': element.panier.id}) }}">+</a>
                <a href="{{ path('admin_panier_enlever', {'id': element.panier.id}) }}">-</a>
                <a href="{{ path('admin_panier_supprimer', {'id': element.panier.id}) }}">-</a>
            </td>          
        </tr>
    {% else %}
        <tr>
           <td colspan="4">Votre panier est vide</td> 
        </tr>
    {% endfor %}

</table>


    <a href="">Create new</a>
{% endblock %}
