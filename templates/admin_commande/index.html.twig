{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Numero</th>
                <th>Date_cmde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.price }}</td>
                <td>{{ commande.numero }}</td>
                <td>{{ commande.dateCmde ? commande.dateCmde|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_commande_new') }}">Create new</a>
{% endblock %}
