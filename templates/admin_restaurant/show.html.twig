{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ restaurant.address }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ restaurant.zip }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ restaurant.email }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ restaurant.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ restaurant.img }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ restaurant.date ? restaurant.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_restaurant_index') }}">back to list</a>

    <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}">edit</a>

    {{ include('admin_restaurant/_delete_form.html.twig') }}
