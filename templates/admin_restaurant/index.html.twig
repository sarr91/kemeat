{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
    <h1>Restaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Zip</th>
                <th>Email</th>
                <th>City</th>
                <th>Description</th>
                <th>Img</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.name }}</td>
                <td>{{ restaurant.address }}</td>
                <td>{{ restaurant.zip }}</td>
                <td>{{ restaurant.email }}</td>
                <td>{{ restaurant.city }}</td>
                <td>{{ restaurant.description }}</td>
                <td>{{ restaurant.img }}</td>
                <td>{{ restaurant.date ? restaurant.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_restaurant_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_restaurant_new') }}">Create new</a>
{% endblock %}
